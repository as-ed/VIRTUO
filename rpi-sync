#!/bin/bash

set -e

if [[ "$1" =~ ^-.* ]]; then
	ip="${2:-veemon.local}"
else
	ip="${1:-veemon.local}"
fi

if ! ping -c 1 $ip > /dev/null 2> /dev/null; then
	echo "Host $ip not found"
	exit 1
fi

echo "Starting sync ..."

ssh pi@"${ip}" "mkdir -p /home/pi/virtuo"
rsync -P -a --delete -e ssh --exclude-from=".rsync-exclude" . pi@"${ip}":/home/pi/virtuo
ssh pi@"${ip}" "cd ~/virtuo && mv rpi_config.yml config.yml"
#ssh pi@"${ip}" "cd ~/virtuo && ~/.local/bin/pipenv sync"

echo "Done"
